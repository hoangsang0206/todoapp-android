<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.TodoFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f9ffff">

        <HorizontalScrollView
            android:id="@+id/horizontal_categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingTop="13dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/cate1"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="0dp"
                    android:layout_margin="8dp"
                    android:text="Danh mục 1"
                    android:textSize="12sp"
                    android:textColor="#676d74"
                    android:background="@drawable/btn_bg_category"
                    app:backgroundTint="@null" />


                <Button
                    android:id="@+id/cate2"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_margin="8dp"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="0dp"
                    android:text="Danh mục 1"
                    android:textColor="#676d74"
                    android:textSize="12sp"
                    android:background="@drawable/btn_bg_category"
                    app:backgroundTint="@null" />

                <Button
                    android:id="@+id/cate3"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="0dp"
                    android:layout_margin="8dp"
                    android:text="Danh mục 1"
                    android:textSize="12sp"
                    android:textColor="#676d74"
                    android:background="@drawable/btn_bg_category"
                    app:backgroundTint="@null" />


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="0dp"
                    android:layout_margin="8dp"
                    android:text="Danh mục 1"
                    android:textSize="12sp"
                    android:textColor="#676d74"
                    android:background="@drawable/btn_bg_category"
                    app:backgroundTint="@null" />


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="0dp"
                    android:layout_margin="8dp"
                    android:text="Danh mục 1"
                    android:textSize="12sp"
                    android:textColor="#676d74"
                    android:background="@drawable/btn_bg_category"
                    app:backgroundTint="@null" />


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="0dp"
                    android:layout_margin="8dp"
                    android:text="Danh mục 1"
                    android:textSize="12sp"
                    android:textColor="#676d74"
                    android:background="@drawable/btn_bg_category"
                    app:backgroundTint="@null" />


            </LinearLayout>

        </HorizontalScrollView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/todo_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/horizontal_categories"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="20dp"
            android:paddingHorizontal="15dp">

        </androidx.recyclerview.widget.RecyclerView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>