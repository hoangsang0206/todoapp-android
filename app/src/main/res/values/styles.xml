<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="ToolbarTitleTextAppearance">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="Button">
        <item name="android:background">@drawable/btn_border_only</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="EditText">
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:padding">15dp</item>
        <item name="android:backgroundTint">@null</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColorHint">#a9a8aa</item>
    </style>

    <style name="EditTextNoBorder">
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/edit_text_bg_no_border</item>
        <item name="android:padding">18dp</item>
        <item name="android:backgroundTint">@null</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColorHint">#a9a8aa</item>
    </style>

    <style name="PopupHeader">
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle">bold</item>
        <item name="color">@color/black</item>
    </style>

    <style name="NavText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>